.homepage-fold-1
  background-image: url('../img/people-drinking-water-blue.jpg')
  background-position: center center;
  background-size: cover;
  background-attachment: fixed;
  height 100vh
  display flex
  justify-content center
  align-items center
  flex-direction column
  font-weight 300
  font-family "Gotham"

  &-title
    font-size: remify(60);
    font-weight: normal;
    line-height: 1.17;
    letter-spacing: -0.1px;
    text-align: center;
    color: #ffffff;
    display block
    box-sizing border-box
    span
      font-weight bold

  &-subtitle
    font-size: remify(23);
    font-weight: normal;
    line-height: 1.83;
    letter-spacing: 1px;
    text-align: center;
    color: #ffffff;
    margin-top 20px

  &-button
    font-size remify(17)
    background-color #fcb133
    height 78px
    width 284px
    color white
    text-align center
    box-shadow: 0 12px 34px 0 rgba(0, 0, 0, 0.41);
    margin-top 20px
    display flex
    align-items center
    justify-content center

    &:hover
      background-color #df9a2e

    span
      margin-right 30px

.homepage-fold-2
  background-color white
  margin-top 50px
  padding-bottom 50px

  &-description
    font-family: "Gotham";
    font-size: remify(32);
    font-weight: bold;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.27;
    letter-spacing: 0px;
    color: #232323;
    flex-basis 50%

  &-reach
    flex-basis 100%
    margin-top 30px
    display flex
    &-image
      flex-basis 50%
      margin 0
      img
        width 100%
        height auto
    &-description
      flex-basis 50%
      div
        font-family: Gotham;
        font-size: remify(15);
        font-weight: normal;
        font-style: normal;
        font-stretch: normal;
        line-height: 1.83;
        letter-spacing: 0.5px;
        color: #515151;
        width 67%
        margin 15px 0 0 40px
      a
        margin 15px 0 0 40px

        &:hover
          background-color #df9a2e

        span
           margin-right 30px

.homepage-fold-3
  &-left-column
    flex-basis 50%
    text-align right
    padding-right 100px
  &-right-column
    flex-basis 50%
    display flex
    flex-wrap wrap
    figure
      flex-basis 50%
      margin 0
      padding-bottom 10px
      padding-top 10px
      position relative
      &:nth-child(odd)
        padding-left 0
        padding-right 10px
        span
          left 0
      &:nth-child(even)
        padding-left 10px
        padding-right 0
        span
          left 10px
      img
        width 100%
        height auto
      span
        width: 47px;
        height: 47px;
        background-color: #fcb133;
        position absolute
        bottom 15px
        text-align center
        line-height: 47px;
        color white
        font-family "Gotham"
        display none
  &-title
    justify-content flex-end
    margin-top 70px
  &-subtitle
    font-family: Gotham;
    font-size: remify(45)
    font-weight: bold;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.04;
    letter-spacing: -0.1px;
    text-align: right;
    color: #232323;
  &-description
    font-family: Gotham;
    font-size: remify(18)
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.72;
    letter-spacing: 0.5px;
    text-align: right;
    color: #515151;
    margin-top 10px
  &-button
    margin 20px 0 0 auto
