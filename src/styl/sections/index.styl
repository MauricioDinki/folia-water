.homepage-button
  background-color #fcb133
  font-size remify(14)
  width 244px
  height 67px
  color white
  text-align center
  box-shadow: 0 12px 34px 0 rgba(0, 0, 0, 0.41);
  display flex
  align-items center
  justify-content space-around

  &:hover
    background-color #df9a2e

.homepage-container
  width 85%
  margin 0 auto
  display flex
  flex-direction row
  flex-wrap wrap


.owl-theme .owl-dots .owl-dot span {
  width: 20px;
  height: 20px;
  background: #515151;
  border-radius: 50%;
}
.owl-theme .owl-dots .owl-dot.active span,
.owl-theme .owl-dots .owl-dot.active span:hover {background: #fcb133;}
.owl-theme .owl-dots .owl-dot span:hover {background: #fcb133;}

.owl-nav-custom {
  display flex
}
.owl-nav-custom div {
  width: 50px;
  height: 50px;
  display: flex;
  cursor: pointer;
  justify-content center
  align-items center

}

.owl-nav-custom div:first-child {
  background-color: transparent;
  border 1px solid black
  margin-right 10px
}
.owl-nav-custom div:last-child {
  background-color: #fcb133;
  color black
  box-shadow: 0 12px 34px 0 rgba(0, 0, 0, 0.41);
}

