/* Homepage Utils*/
.homepage-button
  background-color #fcb133
  font-size remify(16)
  width 258px
  height 78px
  color white
  box-shadow: 0 12px 34px 0 rgba(0, 0, 0, 0.41)
  display flex
  align-items center
  justify-content space-around
  font-weight bold
  letter-spacing 1.5px
  @media screen and (max-width: 1300px)
    width 232.2px
    height 70.2px
    font-size remify(14)
  @media screen and (max-width: 992px)
    width 206.4px
    height 62.4px
    font-size remify(13)
  @media screen and (max-width: 576px)
    width 180.6px
    height 54.6px
    font-size remify(11)
  &:hover
    background-color #df9a2e

.homepage-title
  color black
  display flex
  align-items center
  flex-basis 100%
  &-line
    width 50px
    height 3px
    border-radius 0.5px
    background-color #fcb133
    margin-right 20px
  span
    font-size remify(15)
    font-weight bold
    color #232323
    line-height 3.27
.homepage-wrapper
  display block
  width 82%
  margin 0 auto
  @media screen and (max-width: 576px)
    width 85%
.owl-nav-custom
  display flex
  div
    width 50px
    height 50px
    display flex
    cursor pointer
    justify-content center
    align-items center
    &:first-child
      background-color transparent
      border 1px solid black
      margin-right 10px
    &:last-child
      background-color #fcb133
      color black
      box-shadow 0 12px 34px 0 rgba(0, 0, 0, 0.41)
.owl-theme .owl-dots .owl-dot span
  width 20px
  height 20px
  background #515151
  border-radius 50%

.owl-theme .owl-dots .owl-dot.active span,
.owl-theme .owl-dots .owl-dot.active span:hover
  background: #fcb133
.owl-theme .owl-dots .owl-dot span:hover
  background #fcb133

