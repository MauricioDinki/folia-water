.footer
  background-image: url('../img/footer-bg.jpg')
  background-size: cover;
  min-height 418px
  overflow auto
  &-container
    display flex
    margin 110px auto !important
    flex-direction column
    @media screen and (max-width: 992px)
      margin 90px auto !important
    @media screen and (max-width: 576px)
      margin 50px auto !important
  &-top
    display flex
    flex-direction row
    flex-wrap wrap
  &-column
    flex-basis 25%
    width 25%
    display flex
    flex-direction column
    flex-wrap wrap
    @media screen and (max-width: 992px)
      flex-basis 50%
      width 50%
      &:nth-child(1)
        order 4
      &:nth-child(2)
        order 3
      &:nth-child(3)
        order 2
      &:nth-child(4)
        order 1
    @media screen and (max-width: 576px)
      flex-basis 100%
      width 100%
      margin-bottom 35px
  &-bottom
    display block
    @media screen and (max-width: 992px)
      margin-top 30px
  &-social
    display flex
    flex-direction column
    justify-content space-between
    @media screen and (max-width: 992px)
      justify-content center
    &-items
      display flex
      justify-content space-between
    &-item
      margin 0
      height 37px
      width 37px
      img
        width 100%
        height 100%
    &-label
      color white
      display block
      margin-bottom 20px
      font-size remify(17)
  &-internal
    padding-left 60px
    @media screen and (max-width: 992px)
      padding 0
    a
      color white
      margin-bottom 10px
      font-size 17px
      letter-spacing 1.6px
  &-information
    &-title
      font-weight bold
      color white
      margin-bottom 20px
    &-content
      display block
      margin-bottom 20px
      font-size remify(17)
      color white
      a
        font-size remify(17)
        color white
        cursor pointer
  &-logo
    margin 0 0 0 auto
    width 175px
    height auto
    @media screen and (max-width: 992px)
      margin 0
    img
      width 100%
      height auto
